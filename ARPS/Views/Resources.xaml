                                    <TextBlock Grid.Column="10" Text="ListDirectory"     Style="{StaticResource TextBlockBoldStyle}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="11" Text="Propagation"     Style="{StaticResource TextBlockBoldStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </TreeViewItem.Header>
                        </TreeViewItem>

                        <!-- Data rows -->
                        <TreeView Grid.Row="1" ItemsSource="{Binding Member}" BorderBrush="Gray" BorderThickness="0 1 0 0">
                            <TreeView.ItemTemplate>

                                <!-- Level 0 template leaves space for 2 child "Toggle" levels -->
                                <HierarchicalDataTemplate ItemsSource="{Binding Member}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition SharedSizeGroup="Name"/>
                                            <ColumnDefinition SharedSizeGroup="Toggle"/>
