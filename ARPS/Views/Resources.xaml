                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <Image Grid.Column="8" Width="20" Height="20" Source="{StaticResource Img_Checkmark}">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger  Binding="{Binding HasWrite}" Value="False">
                                                            <Setter Property="Visibility" Value="Hidden"/>
                                                        </DataTrigger >
                                                        <DataTrigger Binding="{Binding IsInherited}" Value="True">
                                                            <Setter Property="Opacity" Value="0.3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <Image Grid.Column="9" Width="20" Height="20" Source="{StaticResource Img_Checkmark}">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger  Binding="{Binding HasRead}" Value="False">
                                                            <Setter Property="Visibility" Value="Hidden"/>
                                                        </DataTrigger >
                                                        <DataTrigger Binding="{Binding IsInherited}" Value="True">
                                                            <Setter Property="Opacity" Value="0.3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <Image Grid.Column="10" Width="20" Height="20" Source="{StaticResource Img_Checkmark}">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger  Binding="{Binding HasListDirectory}" Value="False">
                                                            <Setter Property="Visibility" Value="Hidden"/>
                                                        </DataTrigger >
                                                        <DataTrigger Binding="{Binding IsInherited}" Value="True">
                                                            <Setter Property="Opacity" Value="0.3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>

                                        <TextBlock Grid.Column="11" Text="{Binding Propagation}" Style="{StaticResource TextBlockStyle}"/>
                                    </Grid>

                                    <!-- Level 1 template leaves space for 1 child "Toggle" level -->
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Member}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition SharedSizeGroup="Name"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition SharedSizeGroup="rightCount"/>
                                                    <ColumnDefinition SharedSizeGroup="IsInherited"/>
                                                    <ColumnDefinition SharedSizeGroup="HasFullControll"/>
                                                    <ColumnDefinition SharedSizeGroup="HasModify"/>
                                                    <ColumnDefinition SharedSizeGroup="HasReadAndExecute"/>
                                                    <ColumnDefinition SharedSizeGroup="HasWrite"/>
                                                    <ColumnDefinition SharedSizeGroup="HasRead"/>
                                                    <ColumnDefinition SharedSizeGroup="HasListDirectory"/>
                                                    <ColumnDefinition SharedSizeGroup="Propagation"/>
                                                    <ColumnDefinition SharedSizeGroup="RightMargin"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                                    <Image Width="20" Source="{Binding SID, Converter={x:Static local:SIDToImageConverter.Instance}}"/>
                                                    <TextBlock Text="{Binding IdentityName}"/>
                                                </StackPanel>

                                                <Border Grid.Column="3" Width="50" HorizontalAlignment="Center">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding rightCount}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        <Image Grid.Column="1" Tag="{Binding rightCount}" Width="20" Height="20" Margin="0 0 5 0" Source="{StaticResource Img_Warning}">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Style.Triggers>
                                                                        <DataTrigger  Binding="{Binding rightCount}" Value="1">
                                                                            <Setter Property="Visibility" Value="Hidden"/>
                                                                        </DataTrigger >
