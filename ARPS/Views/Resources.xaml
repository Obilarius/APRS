                                        <ColumnDefinition Width="30px" SharedSizeGroup="HasFullControll"/>
                                        <ColumnDefinition Width="30px" SharedSizeGroup="HasModify"/>
                                        <ColumnDefinition Width="30px" SharedSizeGroup="HasReadAndExecute"/>
                                        <ColumnDefinition Width="30px" SharedSizeGroup="HasWrite"/>
                                        <ColumnDefinition Width="30px" SharedSizeGroup="HasRead"/>
                                        <ColumnDefinition Width="30px" SharedSizeGroup="HasListDirectory"/>
                                        <ColumnDefinition SharedSizeGroup="Propagation"/>
                                        <ColumnDefinition Width="450px" SharedSizeGroup="RightMargin"/>
                                    </Grid.ColumnDefinitions>
