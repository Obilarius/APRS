                                            <ColumnDefinition SharedSizeGroup="HasWrite"/>
                                            <ColumnDefinition SharedSizeGroup="HasRead"/>
                                            <ColumnDefinition SharedSizeGroup="HasListDirectory"/>
                                            <ColumnDefinition SharedSizeGroup="Propagation"/>
                                            <ColumnDefinition SharedSizeGroup="RightMargin"/>
